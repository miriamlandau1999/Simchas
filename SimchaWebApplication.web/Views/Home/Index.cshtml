@using SimchaWebApplication.web.Models
@using SimchaWebApplication.data
@model  IndexViewModel
<div class="container">
    <div>
        <h2 class="col-md-offset-5">Simchas</h2>
        <button class="btn btn-success newSimchabtn">New Simcha</button>
        <br />
        <br />
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <tr>
                    <th style="text-align:center;vertical-align:middle;">Contributions</th>
                    <th style="text-align:center;vertical-align:middle;">Simcha Name</th>
                    <th style="text-align:center;vertical-align:middle;">Contributor Count</th>
                    <th style="text-align:center;vertical-align:middle;">Total</th>
                    <th style="text-align:center;vertical-align:middle;">Date</th>
                    <th style="text-align:center;vertical-align:middle;">Actions</th>
                </tr>
                @foreach (Simcha s in Model.Simchas)
            {
                    <tr>
                        <td style="text-align:center;vertical-align:middle;">
                            <a class="btn btn-primary" href="/home/Contributions?SimchaId=@s.Id">Contributions</a>
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @s.Name
                        </td>

                        <td style="text-align:center;vertical-align:middle;">
                            @s.ContributorCount / @Model.TotalContributors
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            $ @s.TotalContributions.ToString()
                        </td>
                        <td style="text-align:center;vertical-align:middle;">
                            @s.Date.ToShortDateString()
                    </td>
                    <td style="text-align:center;vertical-align:middle;">
                        <a class="btn btn-danger" href="">Email Organizer</a>
                    </td>
                </tr>
                }
            </table>
            </div>
        </div>
</div>
<div class="modal fade newSimchaModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form action="/home/NewSimcha" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Deposit</h4>
                </div>
                <div class="modal-body">
                    <h4>Simcha Name</h4>
                    <input type="text" class="form-control" placeholder="Simcha Name" name="Name" />
                    <br />
                    <h4>Date</h4>
                    <input type="date" class="form-control" placeholder="Date" name="Date" />
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary">Save</button>
                </div>
                </form>
</div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts{
    <script src="~/Content/IndexJavaScript.js"></script>
    }